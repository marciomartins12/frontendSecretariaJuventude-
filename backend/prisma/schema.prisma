generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  password    String
  role        Role     @default(EMPLOYEE)
  cpf         String   @unique
  pis         String   @unique
  phone       String?
  address     String?
  department  String?
  position    String?
  admissionDate DateTime @default(now())
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  timeRecords TimeRecord[]
  
  @@map("employees")
}

model TimeRecord {
  id         String     @id @default(cuid())
  employeeId String
  type       RecordType
  timestamp  DateTime   @default(now())
  location   String?
  notes      String?
  
  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  
  @@map("time_records")
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum RecordType {
  ENTRY
  EXIT
  BREAK_START
  BREAK_END
}
